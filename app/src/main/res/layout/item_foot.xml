<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_main_default"
        android:padding="8dp">
        <ImageView
            android:id="@+id/iv_my_foot_shop_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/image_fail_empty" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="4dp">
            <TextView
                android:id="@+id/text_my_foot_shop_name"
                style="@style/DefaultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/statement"
                android:textSize="16sp"
                android:maxEms="6"
                android:text="进口天然海贝"
                android:gravity="center|left"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_my_foot_shop_price"
                style="@style/DefaultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_login_color"
                android:textSize="14sp"
                android:text="现价"
                android:gravity="center|left"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_my_foot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="时间"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_my_foot_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/delete"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>