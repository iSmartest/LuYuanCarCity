<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_default">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_default">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp">
            <ImageView
                android:id="@+id/car_mall_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/iv_back_black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn_search"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/a_key_edt_search"
                    android:textSize="12dp"
                    android:textColorHint="@color/hint_text_color_default"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:hint="请输入你想要的商品或服务"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/im_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|right"
                    android:src="@drawable/car_mall_search"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <ListView
                android:id="@+id/first_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5">
            </ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <ImageView
                    android:id="@+id/iv_class_icon"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"/>
                <GridView
                    android:id="@+id/second_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:numColumns="3">
                </GridView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>