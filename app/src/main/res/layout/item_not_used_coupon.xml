<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/coupon"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/pale_gold"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/text_item_not_used_coupon_securities_reduce_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/pale_gold"
                        android:textSize="20sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="优惠券"
                    android:textColor="@color/pale_gold"
                    android:textSize="10sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:gravity="center|left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满减红包(全场通用)"
                    android:textColor="@color/cp_theme_gray"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/text_item_not_used_coupon_securities_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满300元可用"
                    android:textColor="@color/cp_theme_gray"
                    android:layout_marginTop="4dp"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|bottom"
            android:layout_weight="0.5">
            <TextView
                android:id="@+id/text_item_not_used_coupon_immediate_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即使用"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/snow_white"
                android:background="@drawable/shape_coupon_not_used"/>
            <TextView
                android:id="@+id/text_item_not_used_coupon_securities_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="温馨提示：(有效期至：2017-03-08)"
                android:gravity="bottom"
                android:padding="8dp"
                android:textSize="8dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>