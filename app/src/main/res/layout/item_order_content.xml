<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_default"
    android:paddingTop="8dp"
    android:padding="8dp">
    <ImageView
        android:id="@+id/comm_icon"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:src="@drawable/image_fail_empty" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comm_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="商品名称"
            android:textColor="@color/statement"
            android:textSize="16sp"
            android:layout_weight="1"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/comm_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="118.0"
                android:layout_weight="1"
                android:textColor="@color/btn_login_color"
                android:textSize="14sp"
                android:gravity="center|left"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/comm_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="×1"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/statement"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/comm_total_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="香辣"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textColor="@color/statement"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>