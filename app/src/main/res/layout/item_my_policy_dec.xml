<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_main_default"
        android:layout_marginTop="8dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/text_my_policy_emergency_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交强险"
                    android:textSize="18dp"
                    android:textColor="@color/tangerine"/>
                <TextView
                    android:id="@+id/text_my_policy_order_numer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO.201706190917"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/text_my_policy_emergency_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有路远在线承接"
                    android:textSize="14dp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/in_guarantee"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white_blue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/text_my_policy_is_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被保险人：王晓华"
                android:textSize="14dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/text_my_policy_emergency_lines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保障额度：378.00"
                android:textSize="14dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/text_my_policy_emergency_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保险费用：389.00"
                android:textSize="14dp"
                android:layout_marginTop="4dp"/>
            <TextView

                android:id="@+id/text_my_policy_financial_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理财期限：2017-08-18至2017-09-18"
                android:textSize="14dp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>