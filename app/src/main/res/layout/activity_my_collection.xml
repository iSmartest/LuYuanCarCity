<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <include layout="@layout/activity_base" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_default"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_my_collection_shop"
            style="@style/main_top_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/app_main_default"
            android:gravity="center"
            android:text="商品收藏"
            android:textSize="16sp" />
        <include layout="@layout/v_vertical_line"/>
        <TextView
            android:id="@+id/tv_my_collection_service"
            style="@style/main_top_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/app_main_default"
            android:gravity="center"
            android:text="服务收藏"
            android:textSize="16sp" />
        <include layout="@layout/v_vertical_line"/>
        <TextView
            android:id="@+id/tv_my_collection_bike"
            style="@style/main_top_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/app_main_default"
            android:gravity="center"
            android:text="百科收藏"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/app_main_default"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_collection_cursor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/my_collection_cursor01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/my_collection_cursor02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_my_collection_layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>