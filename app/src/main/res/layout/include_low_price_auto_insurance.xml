<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imag_insurance_company"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_fail_empty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/app_main_default"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_phone_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/car_insurance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="电话报价" />
        </LinearLayout>

        <include layout="@layout/v_vertical_line" />

        <LinearLayout
            android:id="@+id/linear_my_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/car_insrance_wo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="我的保单" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="车牌号码："
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edi_add_car_number"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_text_edit_no_corners"
            android:gravity="center|right"
            android:hint="请输入车牌号码"
            android:textColorHint="@color/hint_text_color_default"
            android:textSize="14dp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="发动机号后6位："
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edi_add_engine_number"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_text_edit_no_corners"
            android:gravity="center|right"
            android:hint="请输入发动机号后6位"
            android:textColorHint="@color/hint_text_color_default"
            android:textSize="14dp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="车架号后6位："
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edi_add_frame_number"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_text_edit_no_corners"
            android:gravity="center|right"
            android:hint="请输入车架号后6位"
            android:textColorHint="@color/hint_text_color_default"
            android:textSize="14dp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="车主姓名："
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edi_add_owner_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_text_edit_no_corners"
            android:gravity="center|right"
            android:hint="请输入车主姓名"
            android:textColorHint="@color/hint_text_color_default"
            android:textSize="14dp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="手机号码："
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edi_add_phone_number"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_text_edit_no_corners"
            android:gravity="center|right"
            android:hint="请输入手机号码"
            android:textColorHint="@color/hint_text_color_default"
            android:textSize="14dp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_default"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">
        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="手机验证码："
            android:textColor="@color/black"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edi_add_phone_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_text_edit_no_corners"
                android:gravity="center|right"
                android:hint="请输入验证码"
                android:textColorHint="@color/hint_text_color_default"
                android:textSize="14dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/shape_phone_verification_no_corners"
                android:text="获取验证码"
                android:textColor="@color/snow_white"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/app_main_default"
        android:layout_marginTop="8dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行驶证照"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/text_low_price_upload_driving_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:textColor="@color/snow_white"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_text_backgroud"
                android:textSize="12dp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/include_low_price_driving_license_frond"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/image_fail_empty"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/include_low_price_driving_license_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/image_fail_empty"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/jion_right"/>
    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/app_main_default"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投保人身份证照"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/text_low_price_upload_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传"
                    android:textColor="@color/snow_white"
                    android:background="@drawable/shape_text_backgroud"
                    android:textSize="12dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/include_low_price_id_card_frond"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/image_fail_empty"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/include_low_price_id_card_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/image_fail_empty"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/jion_right"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_phone_verification_no_corners"
        android:text="下一步"
        android:textColor="@color/snow_white"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp" />
</LinearLayout>