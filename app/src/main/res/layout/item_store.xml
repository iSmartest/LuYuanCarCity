<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/app_main_default"
        android:padding="8dp">
        <ImageView
            android:id="@+id/iv_store_car_picture"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:gravity="center"
            android:src="@drawable/image_fail_empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店名"
                    android:layout_weight="1"
                    android:textColor="@color/statement"
                    android:textSize="16sp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/text_store_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.6分"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/btn_login_color"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_store_sales_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="销量500"
                android:layout_marginTop="8dp"
                android:textColor="@color/statement"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_store_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="地址"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/statement"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/text_store_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="3.33km"
                    android:gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/app_login_blue"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>