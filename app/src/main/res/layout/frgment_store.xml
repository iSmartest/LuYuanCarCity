<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/app_main_default">
        <LinearLayout
            android:id="@+id/linear_store_list_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/text_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二七区"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/statement"/>
            <ImageView
                android:id="@+id/iv_store_tag_down01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_down"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/iv_store_tag_up01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_up"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>
        <LinearLayout
            android:id="@+id/linear_store_list_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/text_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店类别"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/statement"/>
            <ImageView
                android:id="@+id/iv_store_tag_down02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_down"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/iv_store_tag_up02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_up"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>
        <LinearLayout
            android:id="@+id/linear_store_list_default_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/text_default_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认排序"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/statement"/>
            <ImageView
                android:id="@+id/iv_store_tag_down03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_down"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/iv_store_tag_up03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_up"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/store_class"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>


</LinearLayout>