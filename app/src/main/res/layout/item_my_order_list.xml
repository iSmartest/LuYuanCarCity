<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:background="@color/app_main_default">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/statement"
            android:text="订单号"
            android:id="@+id/order_tv"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/statement"
            android:text="1001010"
            android:id="@+id/order_number"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/order_tv"/>
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/btn_login_color"
            android:text="未支付"
            android:id="@+id/order_state"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <include layout="@layout/v_horizontal_line"/>
    <ListView
        android:id="@+id/commodity_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/app_main_default">
        <include layout="@layout/v_horizontal_line"/>
        <TextView
            android:id="@+id/order_totl"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/statement"
            android:text="合计:"
            android:padding="10dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/total_price"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/wo_policy"
            android:text="5230"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/order_totl"
            android:visibility="visible"/>
        <Button
            android:id="@+id/bt_pay"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:textColor="@color/wo_policy"
            android:text="去支付"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/shape_my_all_order"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/bt_delete"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:textColor="@color/wo_policy"
            android:text="删除订单"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_my_all_order"
            android:layout_toLeftOf="@id/bt_pay"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>