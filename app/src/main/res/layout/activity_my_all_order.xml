<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_myorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_main_background"
    tools:context=".activity.MyAllOrderActivity">
    <include layout="@layout/activity_base"/>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:background="@color/app_main_default"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tv_all_order"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="全部"
            android:textSize="13sp" />
        <include layout="@layout/v_vertical_line"/>
        <TextView
            android:id="@+id/tv_wait_payment"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="待支付"
            android:textSize="13sp" />
        <include layout="@layout/v_vertical_line"/>
        <TextView
            android:id="@+id/tv_wait_goods"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待收货"
            android:textSize="13sp" />
        <include layout="@layout/v_vertical_line"/>
        <TextView
            android:id="@+id/tv_wait_install"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待安装"
            android:textSize="13sp" />
        <include layout="@layout/v_vertical_line"/>
        <TextView
            android:id="@+id/tv_wait_evaluate"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待评价"
            android:textSize="13sp" />
        <include layout="@layout/v_vertical_line"/>
        <TextView
            android:id="@+id/tv_wait_after_sale_refund"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="退款售后"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:background="@color/app_main_default">
        <ImageView
            android:id="@+id/my_order_cursor0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/my_order_cursor1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/my_order_cursor2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/my_order_cursor3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/my_order_cursor4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/my_order_cursor5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />
    </LinearLayout>

    <com.lixin.luyuancarcity.view.LazyViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:flipInterval="30"
        android:layout_marginTop="8dp"
        android:persistentDrawingCache="animation" />
</LinearLayout>
