<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/activity_base"/>
        <LinearLayout
            android:id="@+id/linear_my_setting_modify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/app_main_default"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/s_text_click"
                android:textSize="18sp"
                android:maxEms="4"
                android:text="修改密码"
                android:gravity="center|left"
                android:layout_weight="1"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/jion_right"
                android:layout_gravity="center"/>
        </LinearLayout>
        <include layout="@layout/v_horizontal_line"/>
        <LinearLayout
            android:id="@+id/linear_my_setting_version_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/app_main_default"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/s_text_click"
                android:textSize="18sp"
                android:maxEms="4"
                android:text="版本更新"
                android:gravity="center|left"
                android:layout_weight="1"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/jion_right"
                android:layout_gravity="center"/>
        </LinearLayout>
        <include layout="@layout/v_horizontal_line"/>
        <LinearLayout
            android:id="@+id/linear_my_setting_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/app_main_default"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/s_text_click"
                android:textSize="18sp"
                android:maxEms="4"
                android:text="清除缓存"
                android:gravity="center|left"
                android:layout_weight="1"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_my_setting_clear_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/jion_right" />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/v_horizontal_line"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_my_setting_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_phone_verification"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:textColor="@color/app_main_default"
        android:gravity="center"
        android:text="退出登录"/>
</RelativeLayout>