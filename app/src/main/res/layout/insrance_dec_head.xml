<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="452px">

        <ImageView
            android:id="@+id/img_insurance_dec_picture"
            android:layout_width="match_parent"
            android:layout_height="452px"
            android:scaleType="fitXY"
            android:src="@drawable/image_fail_empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_alignParentBottom="true"
            android:background="@color/translucent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_insurance_dec_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="交强险"
                android:textColor="@color/snow_white"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_insurance_dec_now_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥6680"
                        android:textColor="@color/pale_gold"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/text_insurance_dec_orig_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="￥8990"
                        android:textColor="@color/snow_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <include layout="@layout/v_vertical_line" />

                <LinearLayout
                    android:id="@+id/linear_insurance_dec_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_insurance_dec_collection"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/shop_collection" />

                    <TextView
                        android:id="@+id/text_insurance_dec_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/snow_white"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/app_main_default"
        android:orientation="horizontal"
        android:padding="8dp">

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/app_main_colour" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="具体参数"
            android:textColor="@color/text_color_default"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>